@model Vidly.ViewModel.IndexMovieViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@Html.ActionLink("Add movie", "Create", "Movies", new { @class = "btn btn-primary" })

@if (Model.Movies.Count == 0)
{
    <text>No movies registered.</text>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, 
                                         "Edit", 
                                         "Movies", 
                                         new { id = movie.Id }, 
                                         null)
                    </td>
                    <td>@movie.Genre.Name</td>
                </tr>
            }
        </tbody>
    </table>
}